<UserControl x:Class="SampleUpdUserPromptPlugin.FilePropertyGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SampleUpdUserPromptPlugin"
             mc:Ignorable="d" 
             d:DesignWidth="200" d:DesignHeight="25">
    <Grid>
        <DockPanel>
            <Button DockPanel.Dock="Right" Name="btnBrowse" Content="..." Width="20" FontWeight="Bold" ToolTip="Browse"></Button>
            <TextBox Name="txtFilePath" IsReadOnly="True"></TextBox>
        </DockPanel>
    </Grid>
</UserControl>
